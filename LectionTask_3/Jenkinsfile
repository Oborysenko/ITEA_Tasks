pipeline {
  environment {
    registry = "127.0.0.1:5000/nginx_my"
    registryCredential = 'dockerhub'
  }
  agent any
  stages {
    stage('Building image') {
      steps{
        script {
          def app = docker.build(registry + ":$BUILD_NUMBER", "LectionTask_2/task_b/")
          docker.withRegistry('http://127.0.0.1:5000') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
          }
        }
      }
    }
  }
}


